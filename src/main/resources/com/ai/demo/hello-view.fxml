<BorderPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="540.0" prefWidth="680.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ai.demo.HelloController">
    <top>
        <VBox alignment="CENTER" prefHeight="80.0" spacing="10.0">
            <children>
                <Label text="JavaFX 推箱子">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label fx:id="levelLabel" text="关卡: 1">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <Label fx:id="movesLabel" text="步数: 0">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <Label fx:id="timeLabel" text="时间: 0s">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <GridPane fx:id="gameGrid" alignment="CENTER" BorderPane.alignment="CENTER" />
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="60.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="resetButton" focusTraversable="false" mnemonicParsing="false" onAction="#resetGame" text="重置本关" />
                <Button fx:id="skipButton" focusTraversable="false" mnemonicParsing="false" onAction="#skipLevel" text="跳过关卡" />
